{
  "openapi": "3.0.0",
  "info": {
    "title": "Test Application API",
    "description": "API documentation for User, Client, Product, and Contract management.",
    "version": "1.3"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local Development Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "LoginInput": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["username", "password"]
      },
      "UserInput": {
        "type": "object",
        "properties": {
          "username": { "type": "string", "minLength": 5 },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "minLength": 5 }
        },
        "required": ["username", "email", "password"]
      },
      "ClientInput": {
        "type": "object",
        "properties": {
          "username": { "type": "string", "minLength": 5 },
          "email": { "type": "string", "format": "email" }
        },
        "required": ["username", "email"]
      },
      "ProductInput": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "pricing_type": { "type": "string" },
          "price": { "type": "number", "description": "Mapped to price_per_month internally" },
          "calls_per_month": { "type": "integer" },
          "call_limit_type": { "type": "integer" }
        }
      },
      "ContractInput": {
        "type": "object",
        "properties": {
          "client_id": { "type": "integer" },
          "api_id": { "type": "integer" },
          "contract_type": { "type": "string" },
          "pricing_type": { "type": "string" },
          "start_date": { "type": "string", "format": "date", "example": "2023-01-01" },
          "end_date": { "type": "string", "format": "date", "example": "2024-01-01" },
          "contract_status": { "type": "string", "default": "Draft" },
          "value": { "type": "number" }
        },
        "required": ["client_id", "api_id", "start_date", "end_date"]
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User Login",
        "description": "Returns a JWT access token.",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "access_token": { "type": "string" } }
                }
              }
            }
          },
          "401": { "description": "Wrong Password or Username" }
        }
      }
    },
    "/protected": {
      "get": {
        "tags": ["Auth"],
        "summary": "Test Protected Endpoint",
        "responses": {
          "200": { "description": "Access granted", "content": { "application/json": { "example": { "logged_in_as": "username" } } } },
          "404": { "description": "User not found" }
        }
      }
    },
    "/createUser": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new internal user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "User created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/getUsers": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "responses": {
          "200": { "description": "List of users" }
        }
      }
    },
    "/getUser/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "User details" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/deleteUser/{userID}": {
      "delete": {
        "tags": ["Users"],
        "summary": "Delete user by ID",
        "parameters": [
          { "name": "userID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "User deleted" },
          "404": { "description": "User not found" }
        }
      }
    },
    "/createClient": {
      "post": {
        "tags": ["Clients"],
        "summary": "Create a new client",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ClientInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Client created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/getClients": {
      "get": {
        "tags": ["Clients"],
        "summary": "Get all clients",
        "responses": {
          "200": { "description": "List of clients" }
        }
      }
    },
    "/getClient/{id}": {
      "get": {
        "tags": ["Clients"],
        "summary": "Get client by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Client details" },
          "404": { "description": "Client not found" }
        }
      }
    },
    "/createProduct": {
      "post": {
        "tags": ["Products"],
        "summary": "Create a new API Product",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Product created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/getProducts": {
      "get": {
        "tags": ["Products"],
        "summary": "Get all products",
        "responses": {
          "200": { "description": "List of products" }
        }
      }
    },
    "/getProduct/{productID}": {
      "get": {
        "tags": ["Products"],
        "summary": "Get product by ID",
        "parameters": [
          { "name": "productID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Product details" },
          "404": { "description": "Product not found" }
        }
      }
    },
    "/updateProduct/{proudctID}": {
      "put": {
        "tags": ["Products"],
        "summary": "Update product",
        "parameters": [
          { "name": "proudctID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Product updated" },
          "404": { "description": "Product not found" }
        }
      }
    },
    "/deleteProduct/{productID}": {
      "delete": {
        "tags": ["Products"],
        "summary": "Delete product",
        "parameters": [
          { "name": "productID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Product deleted" },
          "404": { "description": "Product not found" }
        }
      }
    },
    "/createContract": {
      "post": {
        "tags": ["Contracts"],
        "summary": "Create a new contract",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Contract created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/getContracts": {
      "get": {
        "tags": ["Contracts"],
        "summary": "Get all contracts",
        "responses": {
          "200": { "description": "List of contracts" }
        }
      }
    },
    "/getContract/{contractID}": {
      "get": {
        "tags": ["Contracts"],
        "summary": "Get contract by ID",
        "parameters": [
          { "name": "contractID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Contract details" },
          "404": { "description": "Contract not found" }
        }
      }
    },
    "/getContractsByUser/{userID}": {
      "get": {
        "tags": ["Contracts"],
        "summary": "Get contracts by Client/User ID",
        "parameters": [
          { "name": "userID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "List of contracts" }
        }
      }
    },
    "/getContractsByProduct/{productID}": {
      "get": {
        "tags": ["Contracts"],
        "summary": "Get contracts by Product ID",
        "parameters": [
          { "name": "productID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "List of contracts" }
        }
      }
    },
    "/updateContract/{contractID}": {
      "put": {
        "tags": ["Contracts"],
        "summary": "Update contract",
        "parameters": [
          { "name": "contractID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContractInput" }
            }
          }
        },
        "responses": {
          "200": { "description": "Contract updated" },
          "404": { "description": "Contract not found" }
        }
      }
    },
    "/deleteContract/{contractID}": {
      "delete": {
        "tags": ["Contracts"],
        "summary": "Delete contract",
        "parameters": [
          { "name": "contractID", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Contract deleted" },
          "404": { "description": "Contract not found" }
        }
      }
    }
  }
}